<Window x:Class="Ejemplo_WPF2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejemplo_WPF2"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="925">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Lista Alumnos" FontSize="18" Click="btnListAlumnos_Click"></Button>
            <Button Grid.Column="1" Content="Alumnos" FontSize="18" Click="btnAlumnos_Click"></Button>
            <Button Grid.Column="2" Content="Lista Tutores" FontSize="18" Click="btnListTutores_Click"></Button>
            <Button Grid.Column="3" Content="Tutores" FontSize="18" Click="btnTutor_Click"></Button>
        </Grid>
        <Grid Grid.Row="1" Name="contenedor">
            
        </Grid>
    </Grid>
</Window>
